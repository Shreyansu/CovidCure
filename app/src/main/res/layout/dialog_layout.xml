<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">


            <EditText
                android:textColor="@android:color/black"
                android:id="@+id/recentPlace"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:layout_centerHorizontal="true"
                android:hint="Recent place travelled"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:textColorHint="#8fb1b9"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you Quarantined?"
                android:textAllCaps="false"
                android:layout_below="@+id/recentPlace"
                android:id="@+id/qstatus"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:id="@+id/ll"
                android:layout_below="@id/qstatus">

                <RadioButton
                    android:id="@+id/radioQuarYes"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="50dp"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:paddingRight="15dp"
                    android:text="Yes"
                    android:textColor="#8fb1b9"
                    android:textSize="17sp"
                     />

                <RadioButton
                    android:id="@+id/radioQuarNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text="No"
                    android:textColor="#8fb1b9"
                    android:textSize="17sp"
                     />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quarantine type:"
                android:textSize="20dp"
                android:id="@+id/type"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_below="@id/ll"/>

            <RadioButton
                android:id="@+id/radioHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_below="@id/type"
                android:layout_marginLeft="50dp"
                android:paddingRight="15dp"
                android:text="Home Quarantine"
                android:textColor="#8fb1b9"
                android:textSize="18sp"
                 />

            <RadioButton
                android:id="@+id/radioGovt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/radioHome"
                android:paddingRight="15dp"
                android:text="Isolation Ward"
                android:textColor="#8fb1b9"
                android:textSize="18sp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
               >

                <TextView
                    android:id="@+id/proceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="   PROCEED  "
                    android:textColor="#000"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>








        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</RelativeLayout>